<p class="image">
  <img class="max-w-100"
      src="{{ src }}?tr=w-480"
      srcSet="{{ src }}?tr=w-480 480w,
              {{ src }}?tr=w-800 800w,
              {{ src }}?tr=w-1600 1600w"
      sizes="(max-width: 850px) 90vw, 800w"
      alt="{{ alt }}"
      />
</p>
{% if settings %}
{{ settings }}{.italic .text-gray-400 .text-sm .settings}
{% endif %}
