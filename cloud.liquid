---
layout: gallery
---

<div class="w-full">
  <div class="flex flex-col items-center mx-5">
    <h1 class="text-3xl sm:text-5xl font-sans font-bold mt-1 mb-2 md:mt-10">Cloud Experiment</h1>

    <p class="font-sans block md:hidden mb-5">Phone users, tap and hold to save to your photos.</p>

    <span id="loading">Loading images ...</span>
    <div id="not-found" class="hidden flex flex-col justify-center items-center mt-5">
      <h2 class="text-2xl sm:text-4xl font-sans font-bold mb-8">Not Found</h2>
      <p class="text-xl font-sans">Transfer not found. It might have expired. Reach out to Tony for help.</p>
    </div>
    <div id="masonry" class="masonry flex w-full" data-colcade="columns: .masonry-col, items: .masonry-item">
      <div class="masonry-col masonry-col--1 mr-1 flex-1"></div>
      <div class="masonry-col masonry-col--2 mx-1 flex-1 hidden md:block"></div>
      <div class="masonry-col masonry-col--3 mx-1 flex-1 hidden lg:block"></div>
      <div class="masonry-col masonry-col--4 mx-1 flex-1 hidden 2xl:block"></div>
      <div class="masonry-col masonry-col--5 mx-1 flex-1 hidden 3xl:block"></div>
      <div class="masonry-col masonry-col--6 mx-1 flex-1 hidden 4xl:block"></div>

      <script defer src="https://www.unpkg.com/mustache@4.2.0/mustache.min.js"></script>
      <script id="template" type="x-tmpl-mustache">
        <img class="h-auto max-w-full lazyload" width="500px" height="auto" loading="lazy" src="{{ '{{image_url}}' }}" alt="Image for {{ '{{name}}' }}"></img>
        <div class="w-full flex justify-between border px-3 py-1 bg-gray-50">
          <span>{{ '{{name}}' }}</span>
          <button class="w-6 text-black download-link opacity-60 hover:opacity-100" data-url="/.netlify/images?url={{ '{{image_url}}' }}&fm=jpg&q=100" data-download="{{ '{{name}}' }}">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5M16.5 12 12 16.5m0 0L7.5 12m4.5 4.5V3" />
            </svg>
          </button>
        </div>
      </script>
      <script>
        document.addEventListener("DOMContentLoaded", refresh);

        async function refresh() {
          const res = await fetch("/.netlify/functions/get-cloudinary");

          if (res.status === 200) {
            const images = await res.json();

            if (images.length === 0)
              return notFound();

            const container = document.getElementById("masonry");
            const template = document.getElementById('template').innerHTML;

            images.items
              .sort((a,b) => new Date(b.created_at) - new Date(a.created_at))
              .forEach(item => {
                // Build crop URLs client-side using Cloudinary transformation URLs
                const base = item.secure_url;
                const names = base.split('/');
                var name = "image.jpg";

                if (names.length > 0)
                  name = names[names.length - 1];

                // easiest: use secure_url for original display
                const original = base;

                // If you want derived crops, you can use the public_id:
                const pid = item.public_id;

                const crop = (w,h) =>
                  `https://res.cloudinary.com/dlbm3kqh0/image/upload/c_fill,g_auto,w_${w},h_${h}/${encodeURIComponent(pid).replace(/%2F/g,'/')}.jpg`;

                const url916 = crop(1080,1920);
                const url45  = crop(1080,1350);
                const url11  = crop(1080,1080);

                const d = document.createElement('div');
                d.classList.add("masonry-item", "mb-2", "relative", "flex", "flex-col");
                d.innerHTML.append(Mustache.render(template, { name: name, image_url: original }));
                d.innerHTML.append(Mustache.render(template, { name: name, image_url: url916 }));
                d.innerHTML.append(Mustache.render(template, { name: name, image_url: url45 }));
                d.innerHTML.append(Mustache.render(template, { name: name, image_url: url11 }));
                masonry.append(d);
              });

            setTimeout(function () {
              document.getElementById("loading").remove();
            }, 1000);

            const downloadLinks = document.getElementsByClassName("download-link");

            Array.from(downloadLinks).forEach(function (link) {
              link.onclick = async function () {
                var blob;
                try {
                  const modal = document.getElementById("modal-loading");
                  modal.classList.remove('hidden');

                  const res = await fetch(link.dataset.url);
                  blob = await res.blob();

                  if (navigator.share) {
                    await navigator.share({ files: [new File([blob], link.dataset.download)] });
                  } else {
                    doDownload(blob, link.dataset.download);
                  }

                  modal.classList.add('hidden');
                } catch (e) {
                  document.getElementById("modal-loading").classList.add('hidden');
                  console.error(e);
                  if (blob) {
                    doDownload(blob, link.dataset.download);
                  } else {
                    var a = document.createElement("a");
                    a.href = link.dataset.url;
                    a.download = download;
                    a.target = "_blank";
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                  }
                }
              }
            });

          } else {
            notFound();
          }
        }

        function notFound() {
          document.getElementById("loading").remove();
          document.getElementById("zip-file").remove();
          document.getElementById("not-found").classList.remove("hidden");
        }

        function doDownload(blob, download) {
          var a = document.createElement("a");
          a.href = URL.createObjectURL(blob);
          a.download = download;
          a.target = "_blank";
          document.body.appendChild(a);
          a.click();
          document.body.removeChild(a);
        }

      </script>
    </div>
  </div>
</div>

